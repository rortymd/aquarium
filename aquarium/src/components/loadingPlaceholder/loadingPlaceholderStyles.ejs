<style id="loadingPlaceholderStyles">
    body {
        overflow: hidden;
    }

    .loadingPlaceholder {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #00051b;
        transition: opacity .3s ease;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        z-index: 999;
    }

    .loadingPlaceholder-hidden {
        opacity: 0;
    }

    .loadingPlaceholder__inner {
        position: relative;
        width: 80px;
        height: 80px;
    }

    .loadingPlaceholder__inner div {
        position: absolute;
        border: 4px solid #16A0E3;
        opacity: 1;
        border-radius: 50%;
        animation: loadingPlaceholderAnim 2s cubic-bezier(0, 0.2, 0.8, 1) infinite;
    }

    .loadingPlaceholder__inner div:nth-child(2) {
        animation-delay: -0.5s;
    }

    @keyframes loadingPlaceholderAnim {
        0% {
            top: 36px;
            left: 36px;
            width: 0;
            height: 0;
            opacity: 0;
        }

        4% {
            top: 36px;
            left: 36px;
            width: 0;
            height: 0;
            opacity: 0;
        }

        5% {
            top: 36px;
            left: 36px;
            width: 0;
            height: 0;
            opacity: 1;
        }

        100% {
            top: 0px;
            left: 0px;
            width: 72px;
            height: 72px;
            opacity: 0;
        }
    }
</style>